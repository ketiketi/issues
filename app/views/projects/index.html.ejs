<% include ../_layouts/header.html.ejs %>

<h1>Projects</h1>

<table class='item-table'>
    <thead>
        <tr>
            <th>Name</th>
            <th class='item-compact'>Issues</th>
            <th class='item-compact'></th>
        </tr>
    </thead>

    <tbody>
        <% projects.forEach(function(project) { %>
            <tr class='item-row'>
                <td>
                    <a href='/projects/<%= project.name %>'>
                        <%= project.title %>
                    </a>
                </td>

                <td class='item-compact'>
                    <%= (project.issues || []).length %>
                </td>

                <td class='item-compact'>
                    <a href='/projects/<%= project.name %>/delete' onclick="return window.confirm('Are you sure?')">
                        Delete
                    </a>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>

<h2>Create New Project</h2>

<form action='/projects' method='post' class='create-form'>
    <label for='name'>Name:</label>
    <input type='text' name='name' length='255' placeholder='e.g New Project' autocomplete='off'/>
    <input type='submit' value='Create' class='button'/>
</form>

<% include ../_layouts/footer.html.ejs %>
