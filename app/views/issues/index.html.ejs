<% include ../_layouts/header.html.ejs %>

<h1>Project: <%= project.title %></h1>

<table class='item-table'>
    <thead>
        <tr>
            <th class='item-compact'>#</th>
            <th>Name</th>
            <th class='item-compact'>Assigned</th>
            <th class='item-compact'>Comments</th>
            <th class='item-compact'>Progress</th>
            <th class='item-compact'>Severity</th>
            <th class='item-compact'></th>
        </tr>
    </thead>

    <tbody>
        <% project.issues.forEach(function(issue) {  %>
            <tr class='item-row'>
           </td>
                <td class='item-compact'>
                    <%= issue.ordinal %>

                <td>
                    <a href='/projects/<%= project.name%>/<%= issue.ordinal %>'>
                        <%= issue.title %>
                    </a>
                </td>

                <td class='item-compact'>
                    <%= issue.assigned.username %>
                </td>

                <td class='item-compact'>
                    <%= issue.comments.length %>
                </td>

                <td class='item-compact'>
                    <%= issue.progress %>
                </td>
                <td class='item-compact'>
                    <%= issue.severity %>
                </td>

                <td class='item-compact'>
                    <a href='/projects/<%= project.name %>/<%= issue.ordinal %>'>
                        Edit
                    </a>
                </td>

                <td class='item-compact'>
                    <a href='/projects/<%= project.name %>/<%= issue.ordinal %>/delete' onclick="return window.confirm('Are you sure?')">
                        Delete
                    </a>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>

<h2>Create New Issue</h2>

<form action='/projects/<%= project.name%>' method='post' class='create-form'>
    <label for='title'>Title:</label>
    <input type='text' name='title' length='255' placeholder='e.g New Issue' autocomplete='off'/>
    <input type='submit' value='Create' class='button'/>
</form>

<% include ../_layouts/footer.html.ejs %>
